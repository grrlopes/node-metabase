{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": false,
    "lib": ["ES2019"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "removeComments": false,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts"
  ]
}
